generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String  @id @default(uuid())
  authCod String  @unique
  shifts  Shift[]

  @@map("users")
}

model Shift {
  id       String    @id @default(uuid())
  checkin  DateTime  @default(now())
  checkout DateTime?
  user     User?     @relation(fields: [userId], references: [id])
  userId   String?

  @@map("shifts")
}
